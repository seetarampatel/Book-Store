<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mb-3">
            <img src="<%= book.image%>" class="card-img-top" alt="book photos">
            <div class="card-body">
                <h5 class="card-title"><%= book.title%></h5>
                <p class="card-text"><%= book.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">Genre: <%= book.genre%></li>
                <li class="list-group-item">Rating: <%= book.rating%></li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-info" href="/books/<%= book._id %>/edit">Edit</a>
                <form class="d-inline" action="/books/<%= book._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            </div>
            <div class="card-footer text-muted">
                <%= book.created.toDateString() %>
            </div>
        </div>
    </div>
</div>