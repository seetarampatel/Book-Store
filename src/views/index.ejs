<% layout('layouts/boilerplate') %>

<h1>All Books</h1>
<div>
    <a href="/books/new">Add Book</a>
</div>
<% for (let book of books){ %>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <img class="img-thumbnail m-4" alt="" src="<%=book.image%>">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= book.title %> </h5>
                <p class="card-text"><%= book.description %></p>
                <p class="card-text">Genre: <%= book.genre%></p>
                <p class="card-text">Rating: <%= book.rating %></p>
                <a class="btn btn-primary" href="books/<%= book._id %>">View <%= book.title %></a>
            </div>
        </div>
    </div>
</div>
<% } %>