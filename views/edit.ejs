<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit book</h1>
    <div class="col-6 offset-3">
        <form action="/books/<%=book._id%>?_method=PUT" method="POST">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="book[title]"
                    value="<%=book.title %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="genre">Genre</label>
                <input class="form-control" type="text" id="genre" name="book[genre]"
                    value="<%=book.genre %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="rating">Rating</label>
                <input class="form-control" type="number" id="rating" name="book[rating]" min="1" max="10"
                    value="<%=book.rating %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="book[image]"
                    value="<%=book.image %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="book[description]"><%= book.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-info">Update Book</button>
            </div>
        </form>
        <a href="/Books/<%= book._id%>">Back To Book</a>

    </div>
</div>
